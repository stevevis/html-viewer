{
  "name": "html-viewer",
  "version": "0.0.1",
  "description": "A HTML source code viewer and summarizer",
  "main": "app.js",
  "scripts": {
    "watch": "watchify app.js -o public/js/bundle.js -v",
    "browserify": "browserify app.js | uglifyjs > public/js/bundle.js",
    "build": "npm run browserify ",
    "start": "npm run watch & nodemon --harmony server.js",
    "prod": "npm run build && NODE_ENV=production forever start --uid \"htmlviewer\" -c \"node --harmony\" -a server.js",
    "stop": "forever stop htmlviewer",
    "update": "git pull && npm run stop && npm run prod"
  },
  "author": "Steve Viselli",
  "license": "MIT",
  "dependencies": {
    "co-request": "^0.2.0",
    "htmlparser2": "^3.8.2",
    "koa": "^0.18.0",
    "koa-error": "^1.1.3",
    "koa-logger": "^1.2.2",
    "koa-response-time": "^1.0.2",
    "koa-router": "^4.1.0",
    "koa-static": "^1.4.9",
    "koajs-nunjucks": "^1.0.1",
    "nunjucks": "^1.2.0",
    "q": "^1.1.2",
    "react": "^0.12.2",
    "react-prism": "^1.2.1",
    "request": "^2.53.0",
    "superagent": "^0.21.0",
    "through": "^2.3.6",
    "url-parse": "^1.0.0",
    "validator": "^3.30.0"
  },
  "devDependencies": {
    "browserify": "^8.1.3",
    "nodemon": "^1.3.7",
    "reactify": "^1.0.0",
    "uglify-js": "^2.4.16",
    "watchify": "^2.3.0"
  },
  "browserify": {
    "transform": [
      "reactify"
    ]
  }
}
